<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id = "@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_soft"
                android:orientation="vertical"
                android:paddingTop="70dp">

                <ImageView
                    android:id="@+id/icon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/colorPrimaryDark"
                    android:padding="12dp"/>

                <ImageView
                    android:id="@+id/icon_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_name"
                    android:src="@drawable/ic_school_black_24dp"
                    android:tint="@color/colorPrimaryDark"
                    android:padding="12dp"/>


                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current User : "
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_toRightOf="@+id/icon_name"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/title_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_name"
                    android:layout_toRightOf="@+id/icon_major"
                    android:text="Major : "
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="15dp"/>

                <TextView
                    android:id = "@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/title_name"
                    android:padding="15dp"
                    />

                <TextView
                    android:id = "@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/firstname"
                    android:padding="15dp"
                    />

                <TextView
                    android:id = "@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstname"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/title_major"
                    android:padding="17dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_id"
                    android:id="@+id/imageView4"
                    android:layout_below="@+id/title_major"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:id = "@+id/idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_hard"
                    android:layout_marginEnd="70dp"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignEnd="@+id/imageView4"
                    android:layout_marginBottom="75dp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>